<div class="users-new-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4 users-new-container">
                <h1 class="text-center text-white">新規会員登録</h1>
                <%= form_for @user do |f| %>
                    <div class="form-group">
                        <%= f.label :name, class: 'text-white' %>
                        <%= f.text_field :name, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :email, class: 'text-white' %>
                        <%= f.text_field :email, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :profile, class: 'text-white' %>
                        <%= f.text_field :profile, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :image %>
                        <%= f.file_field :image %>
                    </div>
                   <div class="form-group">
                        <%= f.label :password, class: 'text-white' %>
                        <%= f.text_field :password, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :password_confirmation, class: 'text-white' %>
                        <%= f.text_field :password_confirmation, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-3">
                                <label> <%= f.radio_button :buyer_flag, "true", id: 'buyer' %>発注者</label>
                                <label style="display:none"> <%= f.radio_button :buyer_flag, "", {:checked => "checked"} %></label>
                            </div>
                            <div class="col-md-3">
                                <label> <%= f.radio_button :seller_flag, "true", id: 'seller' %>購入者</label>

                            </div>
                        </div>
                    <h4>※どちらか一つのみを選択してください</h4>
                    </div>
                    
                    <%= f.submit "登録", class: 'btn btn-block btn-white' %>
                <% end %>
                <%= link_to 'ログインはこちら', '#', class: 'text-white' %>
            </div>
        </div>
    </div>
</div>